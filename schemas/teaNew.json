{
  "$schema": "http://json-schema.org/draft-01/schema#",
  "$id": "http://teaTime.com/teaNew.json",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "brand": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "category": {
      "type": "string"
    },
    "review": {
      "type": "string"
    },
    "country_of_origin": {
      "type": "string"
    },
    "organic": {
      "type": "boolean"
    },
    "img_url": {
      "type": "string",
      "format": "uri"
    },
    "brew_time": {
      "type": "integer"
    },
    "brew_temp": {
      "type": "integer"
    },
    "is_my_tea": {
      "type": "boolean"
    },
    "is_wish_list": {
      "type": "boolean"
    }
  },
  "additionalProperties": false,
  "required": ["title", "brand", "description", "is_my_tea", "is_wish_list"]
}
